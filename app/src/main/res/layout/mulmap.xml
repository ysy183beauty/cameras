<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_margin="@dimen/dp_5">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="位置列表信息"
            android:gravity="center" android:textSize="@dimen/dp_30"
            android:layout_marginTop="@dimen/margin_litter"
            />
        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_1"
            android:background="@color/orange_main"
            />
    </LinearLayout>
    <LinearLayout  android:orientation="horizontal" android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="返回"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@drawable/shapereturn"
            android:focusable="false" android:textColor="@color/background"
            android:textSize="@dimen/text_size_normal" android:layout_margin="@dimen/dp_3"
            android:padding="@dimen/dp_8"
            android:onClick="doReturn" />
    </LinearLayout>
    <!-- 标题 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_margin="@dimen/dp_5"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="@dimen/dp_230"
            android:layout_height="wrap_content" android:text="摄像头名称" android:textSize="@dimen/text_size_large"
            android:padding="@dimen/dp_5"
            android:textColor="@color/bg_normal_gray"
            />
        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content" android:text="距离" android:textSize="@dimen/text_size_large"
            android:padding="@dimen/dp_5" android:textColor="@color/bg_normal_gray"
            />
    </LinearLayout>
    <!-- ListView控件 -->
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView" android:layout_margin="@dimen/dp_5"
        android:background="@color/tv_color"
        />
</LinearLayout>